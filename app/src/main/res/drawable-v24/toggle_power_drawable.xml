<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item android:right="1dp" android:left="1dp" android:top="2dp">
                <shape
                    android:shape="oval">
                    <solid android:color="@color/divider"/>
                    <padding android:left="1dp" android:bottom="2dp" android:right="1dp" android:top="2dp" />

                </shape>
            </item>

            <item>
                <shape android:shape="oval">
                    <solid android:color="#BB2E7D32"></solid>
                    <padding android:left="2dp" android:bottom="2dp" android:right="2dp" android:top="2dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/power" />
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:right="1dp" android:left="1dp" android:top="2dp">
                <shape
                    android:shape="oval">
                    <solid android:color="@color/divider"/>
                    <padding android:left="1dp" android:bottom="2dp" android:right="1dp" android:top="2dp" />

                </shape>
            </item>

            <item>
                <shape android:shape="oval">
                    <solid android:color="#BBE91E63"></solid>
                    <padding android:left="2dp" android:bottom="2dp" android:right="2dp" android:top="2dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/power" />

        </layer-list>
    </item>

</selector>